{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~root/*": ["./*"],
      "~shared": ["src/shared"],
      "~screens": ["screens"],
      "~context": ["context"],
      "~screens/*": ["screens/*"],
      "~components": ["src/components"],
      "~components/*": ["src/components/*"],
      "~types": ["src/types"],
      "~types/*": ["src/types/*"],
      "~hooks": ["src/hooks"],
      "~hooks/*": ["src/hooks/*"]
    }
  },
  "target": "esnext",
  "include": ["**/*.ts", "**/*.tsx", "src"],
  "exclude": ["node_modules", "cypress"]
}
