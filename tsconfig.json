{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~shared": ["src/shared"],
      "~screens/*": ["screens/*"],
      "~components": ["src/components"],
      "~components/*": ["src/components/*"]
    }
  },
  "target": "esnext",
  "include": ["**/*.ts", "**/*.tsx", "src"],
  "exclude": ["node_modules", "cypress"]
}
